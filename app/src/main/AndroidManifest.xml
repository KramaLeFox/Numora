<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.finalproject">

    <!-- Permissions (if you ever access external storage, uncomment the below) -->
    <!--
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    -->

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo_numora"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_numora"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">

        <!-- Main launcher activity -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Home screen -->
        <activity
            android:name=".ui.HomeActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />

        <!-- Add transaction -->
        <activity
            android:name=".ui.AddTransactionActivity"
            android:exported="true"
            android:label="Add Transaction"
            android:theme="@style/Theme.FinalProject" />

        <!-- Chart / reports -->
        <activity
            android:name=".ui.TransactionListActivity"
            android:exported="true"
            android:label="Chart"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />

        <activity
            android:name=".ui.TargetsActivity"
            android:exported="true"
            android:label="Targets"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />

        <activity
            android:name=".ui.ReportActivity"
            android:exported="true"
            android:label="Report"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />

    </application>

</manifest>